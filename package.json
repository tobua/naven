{
  "name": "naven",
  "version": "0.1.0",
  "description": "React based CSS-in-JS styling framework.",
  "repository": "github:tobua/naven",
  "license": "MIT",
  "author": "Matthias Giger",
  "main": "dist/index.js",
  "source": "index.ts",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "padua watch",
    "build": "padua build",
    "lint": "padua lint",
    "release": "padua release",
    "test": "padua test",
    "update": "padua update"
  },
  "dependencies": {
    "@emotion/core": "^10.0.35",
    "@emotion/styled": "^10.0.27",
    "emotion-reset": "^2.0.7",
    "hex-rgb": "^4.1.0"
  },
  "devDependencies": {
    "@types/node": "^14.6.2",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "padua": "0.0.8",
    "react": "^16.13.1"
  },
  "peerDependencies": {
    "react": "^16.13.1"
  },
  "prettier": "padua/configuration/.prettierrc.json",
  "eslintConfig": {
    "extends": "./node_modules/padua/configuration/eslint.cjs"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "./node_modules/padua/configuration/tsconfig.json"
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.jsx?$": [
        "babel-jest",
        {
          "configFile": "./node_modules/padua/configuration/.babelrc"
        }
      ]
    }
  },
  "engines": {
    "node": ">= 13.2.0"
  }
}
