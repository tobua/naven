{
  "name": "naven",
  "description": "React based CSS-in-JS styling framework.",
  "version": "0.0.0-development",
  "repository": "github:tobua/naven",
  "homepage": "https://naven-documentation.vercel.app",
  "license": "MIT",
  "author": "Matthias Giger",
  "scripts": {
    "build": "padua build",
    "start": "padua watch",
    "test": "padua test"
  },
  "padua": {
    "tsconfig": {
      "compilerOptions": {
        "skipLibCheck": true,
        "target": "es6",
        "types": [
          "@types/jest"
        ],
        "lib": [
          "DOM",
          "ESNext"
        ]
      },
      "include": [
        "./declarations.d.ts"
      ]
    },
    "esbuild": {
      "external": [
        "naven"
      ]
    },
    "entry": "feature/*"
  },
  "dependencies": {
    "@codesandbox/sandpack-react": "^1.1.3",
    "@popperjs/core": "^2.11.5",
    "@stitches/react": "^1.2.8",
    "@types/react": "^18.0.12",
    "body-scroll-lock": "^3.1.5",
    "laier": "^1.0.3",
    "memoize-one": "^6.0.0",
    "object-assign-deep": "^0.4.0",
    "react-datepicker": "^4.8.0",
    "react-popper": "^2.3.0",
    "react-select": "^5.3.2",
    "throttle-debounce": "^5.0.0",
    "wasser": "^2.2.1"
  },
  "peerDependencies": {
    "react": "^18.1.0"
  },
  "type": "module",
  "sideEffects": false,
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./Code": "./dist/feature/Code.js",
    "./Date": "./dist/feature/Date.js",
    "./Dropdown": "./dist/feature/Dropdown.js",
    "./Tooltip": "./dist/feature/Tooltip.js"
  },
  "source": "index.ts",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "ui",
    "ui-framework",
    "react",
    "css-in-js",
    "stitches"
  ],
  "devDependencies": {
    "@testing-library/react": "^13.3.0",
    "@types/jest": "^28.1.1",
    "@types/node": "^17.0.41",
    "@types/object-assign-deep": "^0.4.0",
    "@types/react-datepicker": "^4.4.2",
    "@types/react-dom": "^18.0.5",
    "@types/throttle-debounce": "^5.0.0",
    "padua": "^0.5.6",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-test-renderer": "^18.1.0"
  },
  "prettier": "padua/configuration/.prettierrc.json",
  "eslintConfig": {
    "extends": "./node_modules/padua/configuration/eslint.cjs",
    "rules": {
      "prefer-arrow-callback": 0,
      "react/function-component-definition": 0
    }
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "./tsconfig.json"
      }
    },
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.jsx?$": [
        "babel-jest",
        {
          "configFile": "./node_modules/padua/configuration/.babelrc"
        }
      ]
    },
    "transformIgnorePatterns": []
  },
  "engines": {
    "node": ">= 14"
  },
  "typesVersions": {
    "*": {
      "dist/index.d.ts": [
        "dist/index.d.ts"
      ],
      "*": [
        "dist/feature/*"
      ]
    }
  }
}
