{
  "name": "naven",
  "description": "React based CSS-in-JS styling framework.",
  "version": "0.6.1",
  "repository": "github:tobua/naven",
  "homepage": "https://naven-documentation.vercel.app",
  "license": "MIT",
  "author": "Matthias Giger",
  "scripts": {
    "build": "padua build",
    "start": "padua watch",
    "test": "padua test"
  },
  "padua": {
    "tsconfig": {
      "compilerOptions": {
        "types": [
          "@types/jest"
        ],
        "lib": [
          "DOM",
          "ESNext"
        ]
      },
      "include": [
        "./declarations.d.ts"
      ]
    },
    "esbuild": {
      "external": [
        "naven"
      ]
    },
    "entry": "feature/*"
  },
  "dependencies": {
    "@emotion/react": "^11.4.0",
    "@emotion/styled": "^11.3.0",
    "@popperjs/core": "^2.9.2",
    "@types/react": "^17.0.14",
    "body-scroll-lock": "^3.1.5",
    "emotion-reset": "^3.0.1",
    "hex-rgb": "^5.0.0",
    "object-assign-deep": "^0.4.0",
    "react-datepicker": "^4.1.1",
    "react-popper": "^2.2.5",
    "react-select": "^4.3.1",
    "react-syntax-highlighter": "^15.4.3",
    "wasser": "^2.0.1"
  },
  "peerDependencies": {
    "react": "^17.0.2"
  },
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./Code": "./dist/feature/Code.js",
    "./Date": "./dist/feature/Date.js",
    "./Dropdown": "./dist/feature/Dropdown.js",
    "./Tooltip": "./dist/feature/Tooltip.js"
  },
  "sideEffects": false,
  "source": "index.ts",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@emotion/core": "^11.0.0",
    "@testing-library/react": "^12.0.0",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.0",
    "@types/react-dom": "^17.0.9",
    "@types/react-select": "^4.0.17",
    "@types/react-syntax-highlighter": "^13.5.2",
    "padua": "^0.3.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-test-renderer": "^17.0.2"
  },
  "prettier": "padua/configuration/.prettierrc.json",
  "eslintConfig": {
    "extends": "./node_modules/padua/configuration/eslint.cjs"
  },
  "stylelint": {
    "extends": "padua/configuration/stylelint.cjs"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "./tsconfig.json"
      }
    },
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.jsx?$": [
        "babel-jest",
        {
          "configFile": "./node_modules/padua/configuration/.babelrc"
        }
      ]
    },
    "transformIgnorePatterns": [
      "node_modules/cint"
    ]
  },
  "engines": {
    "node": ">= 14"
  },
  "typesVersions": {
    "*": {
      "dist/index.d.ts": [
        "dist/index.d.ts"
      ],
      "*": [
        "dist/feature/*"
      ]
    }
  }
}
